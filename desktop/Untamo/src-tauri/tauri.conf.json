{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Untamo",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": true,
        "center": true,
        "close": true,
        "create": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "print": true,
        "requestUserAttention": true,
        "setAlwaysOnTop": true,
        "setCursorGrab": true,
        "setCursorIcon": true,
        "setCursorPosition": true,
        "setCursorVisible": true,
        "setDecorations": true,
        "setFocus": true,
        "setFullscreen": true,
        "setIcon": true,
        "setIgnoreCursorEvents": true,
        "setMaxSize": true,
        "setMinSize": true,
        "setPosition": true,
        "setResizable": true,
        "setSize": true,
        "setSkipTaskbar": true,
        "setTitle": true,
        "show": true,
        "startDragging": true,
        "unmaximize": true,
        "unminimize": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**", "http://**", "https://*", "http://*"]
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$APPDATA/**"]
      },
      "app": {
        "all": true,
        "show": true,
        "hide": true
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "bins/untamo_audio_play",
            "sidecar": true,
            "args": [
              { "validator": "\\S+" },
              { "validator": "\\S+" },
              { "validator": "\\S+" }
              ]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "externalBin": [
        "bins/untamo_audio_play"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "audio/rooster.flac",
        "audio/analog-watch.flac"
      ],
      "identifier": "com.Untamo",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Untamo",
        "width": 450,
        "height": 790
      }
    ]
  }
}
